# Template Environment Variables File
# Copy this to .env and fill in your production values
# NEVER commit .env to version control!

# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================
# Get your token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=8366781443:AAHIXgGD1UXvPWw9EIDBlMk5Ktuhj2qQ8WU
# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB connection string
# For local: mongodb://root:password@localhost:27017
# For external DB: mongodb://user:password@host:port
MONGODB_URL=mongodb://root:telegram_bot_password@mongo:27017/telegram_bot?authSource=admin

# MongoDB credentials (for Docker container initialization)
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=your-very-secure-password-min-20-chars

# ============================================
# REDIS CONFIGURATION
# ============================================
# Redis password (must be strong)
REDIS_PASSWORD=your-very-secure-redis-password-min-20-chars

# Redis URL (derived from password)
REDIS_URL=redis://:your-very-secure-redis-password-min-20-chars@redis:6379/0

# ============================================
# APPLICATION SECURITY
# ============================================
# Secret key for JWT and session management
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-very-secure-secret-key-minimum-32-characters-long

# ============================================
# API CONFIGURATION
# ============================================
# API host and port (0.0.0.0 for all interfaces)
API_HOST=0.0.0.0
API_PORT=8000

# Web service port
WEB_PORT=8003

# ============================================
# ENVIRONMENT & DEBUG
# ============================================
# Set to 'production' or 'development'
ENVIRONMENT=production

# Debug mode (never true in production)
DEBUG=false

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================
# SERVICE URLS
# ============================================
# URL for services to communicate with centralized API
# Local (Docker): http://centralized-api:8000
# External: http://your-domain.com:8000
CENTRALIZED_API_URL=http://centralized-api:8000

# ============================================
# BOT CONFIGURATION
# ============================================
# Polling timeout in seconds
BOT_POLLING_TIMEOUT=30

# Request timeout in seconds
BOT_REQUEST_TIMEOUT=10

# Drop pending updates on start
BOT_DROP_PENDING_UPDATES=true

# ============================================
# OPTIONAL: MONITORING & ANALYTICS
# ============================================
# Sentry error tracking (optional)
SENTRY_DSN=

# DataDog monitoring (optional)
DATADOG_API_KEY=

# ============================================
# OPTIONAL: EMAIL NOTIFICATIONS
# ============================================
# For system alerts and error notifications
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
ALERT_EMAIL=

# ============================================
# OPTIONAL: WEBHOOK (instead of polling)
# ============================================
# For production, webhooks are more efficient than polling
# Webhook URL that Telegram will POST to
BOT_WEBHOOK_URL=
# Secret token for webhook verification
BOT_WEBHOOK_SECRET=

# ============================================
# CORS CONFIGURATION
# ============================================
# Allowed origins for CORS
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ============================================
# DATABASE BACKUPS
# ============================================
# S3 bucket for backups
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=
